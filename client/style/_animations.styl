/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animatin component
 */

.order-enter
  transition all 0.5s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.order-enter-active
    transform translateX(0)
    max-height 60pxpadding
    padding 2rem 0 !important

.order-leave
  transition all 0.5s
  transform translateX(0)
  &.order0leave-active
    transform translateX(120%)
    max-height 0
    padding 0



.count-enter
  transition all 0.25s
  transform translateY(100%) // start off screen
  &.count-enter-active
    transform translateY(0) // put it in its normal resting spot

.count-leave
  transition all 0.25s
  position absolute
  left 0
  bottom 0
  transform translateY(0) // start it where it is
  &.count-leave-active
    transform translateY(-100%) //